<div class="container">
  <h2>EDIT</h2>
  <%= form_for @user do |f| %>
    <div>
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    <div>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div>
      <%= f.submit "UPDATE" %>
    </div>
  <% end %>
  <%= link_to "Back", user_path(current_user.id) %>
</div>
